{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/ComplexityAnalysis.Core/**/*.csproj",
            "src/ComplexityAnalysis.Roslyn/**/*.csproj",
            "src/ComplexityAnalysis.Solver/**/*.csproj",
            "src/ComplexityAnalysis.Calibration/**/*.csproj",
            "src/ComplexityAnalysis.Engine/**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/*.Tests/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      },
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/articles/**.md",
          "docs/articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "Complexity Analysis System",
      "_appName": "ComplexityAnalysis",
      "_appLogoPath": "",
      "_appFaviconPath": "",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": false,
      "_gitContribute": {
        "repo": "https://github.com/your-org/complexity-analysis",
        "branch": "main"
      }
    }
  }
}
