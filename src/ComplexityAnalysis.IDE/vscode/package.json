{
  "name": "complexity-hints",
  "displayName": "Complexity Hints",
  "description": "Real-time code complexity analysis with Big-O time/space hints, confidence scores, and amortized/probabilistic analysis",
  "version": "0.4.0",
  "publisher": "egoughnour",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "complexity",
    "performance",
    "analysis",
    "big-o",
    "algorithm"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "complexity.checkToolchain",
        "title": "Complexity: Check Toolchain"
      },
      {
        "command": "complexity.analyzeFile",
        "title": "Complexity: Analyze Current File"
      },
      {
        "command": "complexity.analyzeMethod",
        "title": "Complexity: Analyze Method at Cursor"
      },
      {
        "command": "complexity.clearCache",
        "title": "Complexity: Clear Analysis Cache"
      }
    ],
    "configuration": {
      "title": "Complexity Hints",
      "properties": {
        "complexity.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens hints above methods"
        },
        "complexity.analysisDebounceMs": {
          "type": "number",
          "default": 350,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce delay (ms) before running complexity analysis"
        },
        "complexity.tagDebounceMs": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 500,
          "description": "Debounce delay (ms) before updating CodeLens tags"
        },
        "complexity.confidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence score to show as 'high confidence'"
        },
        "complexity.showSpaceComplexity": {
          "type": "boolean",
          "default": true,
          "description": "Show space complexity alongside time complexity"
        },
        "complexity.showConfidence": {
          "type": "boolean",
          "default": true,
          "description": "Show confidence score in CodeLens"
        },
        "complexity.dotnetPath": {
          "type": "string",
          "default": "",
          "description": "Path to dotnet executable (leave empty to use PATH)"
        },
        "complexity.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python executable (leave empty to use PATH)"
        },
        "complexity.uvPath": {
          "type": "string",
          "default": "",
          "description": "Path to uv executable (leave empty to use PATH)"
        },
        "complexity.runEnvProbeOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Run environment probe when extension starts"
        },
        "complexity.useBackendAnalysis": {
          "type": "boolean",
          "default": false,
          "description": "Use the .NET backend for full Roslyn analysis (slower but more accurate)"
        },
        "complexity.cliProjectPath": {
          "type": "string",
          "default": "",
          "description": "Path to ComplexityAnalysis.IDE.Cli.csproj (auto-detected if in workspace)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/complexity-analysis/complexity-hints"
  },
  "license": "MIT"
}